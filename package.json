{
  "name": "tokenplatform",
  "version": "1.0.0",
  "description": "A Flask-based tokenized fundraising platform built on the T-REX (Token for Regulated EXchanges) ERC-3643 standard. This platform enables startups to deploy compliant security tokens and allows only KYC-verified investors to purchase tokens.",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "node": "npx hardhat node",
    "deploy:factory": "npx hardhat run scripts/deploy_factory_enhanced.js",
    "deploy:token": "npx hardhat run scripts/deploy_token_enhanced.js",
    "deploy:compliance": "npx hardhat run scripts/deploy_modular_compliance.js",
    "deploy:registry": "npx hardhat run scripts/deploy_identity_registry.js",
    "deploy:storage": "npx hardhat run scripts/deploy_identity_registry_storage.js",
    "deploy:claim-topics": "npx hardhat run scripts/deploy_claim_topics_registry.js",
    "deploy:trusted-issuers": "npx hardhat run scripts/deploy_trusted_issuers_registry.js",
    "clean": "node scripts/clean-addresses.js",
    "startup": "node scripts/startup.js",
    "stop": "node scripts/stop.js"
  },
  "keywords": [
    "ethereum",
    "erc-3643",
    "security-token",
    "compliance",
    "defi",
    "blockchain",
    "solidity",
    "flask",
    "python"
  ],
  "author": "TokenPlatform Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.1",
    "@nomiclabs/hardhat-solhint": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@xyrusworx/hardhat-solidity-json": "^1.0.2",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "ethers": "^6.8.1",
    "hardhat": "^2.19.1",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@onchain-id/solidity": "^2.2.1",
    "@openzeppelin/contracts": "4.9.5",
    "@openzeppelin/contracts-upgradeable": "4.9.5",
    "dotenv": "^17.2.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
